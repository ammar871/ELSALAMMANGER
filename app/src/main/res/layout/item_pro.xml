<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/imageViewp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/imageViewp"
            android:gravity="right"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_namep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Catogray"
                android:textColor="@color/colorPrimary"

                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_descp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name Catogray"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
               >
                <TextView
                    android:id="@+id/item_pricep"
                    android:textColor="#FA0707"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="2906"/>
                <TextView
                    android:id="@+id/item_Nmarket"
                    android:layout_alignParentRight="true"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="2906"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_title"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/btn_deletep"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_delete_24"

                    android:textColor="@color/black"

                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/btn_updatep"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_baseline_update_24"

                    android:text="update"

                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>